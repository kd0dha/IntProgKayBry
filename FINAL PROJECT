
print ('Welcome to K&B Shopping List App')

ShoppingList = [] #this is an empty dictionary...

add = input('Do you want to add something to your list? Y or N!') 

while add.lower() == 'y':
    item = input ('Enter item to your list:')
    ShoppingList.append(item)
    add - input('Want to add more to your list?')

print()
print('Here is your shopping list.')

import tkinter
import tkinter.messagebox

#create root window
root = tkinter.Tk()

class ShoppingList:
    def __init__(self:
        #create the main window.
        self.main_window = tkinter.Tk()
        # Create two frames. One for the checkbuttons
        # and another for the regular Button widgets.
        self.top_frame = tkinter.Frame(self.main_window)
        self.bottom_frame = tkinter.Frame(self.main_window)

        # Create three IntVar objects to use with
        # the Checkbuttons.
        self.cb_var1 = tkinter.IntVar()
        self.cb_var2 = tkinter.IntVar()
        self.cb_var3 = tkinter.IntVar()
        self.cb_var4 = tkinter.IntVar()
        self.cb_var5 = tkinter.IntVar()
        self.cb_var6 = tkinter.IntVar()
        self.cb_var7 = tkinter.IntVar()

        # Set the intVar objects to 0.
        self.cb_var1.set(0)
        self.cb_var2.set(0)
        self.cb_var3.set(0)
        self.cb_var4.set(0)
        self.cb_var5.set(0)
        self.cb_var6.set(0)
        self.cb_var7.set(0)

        # Create the Checkbutton widgets in the top_frame.
        self.cb1 = tkinter.Checkbutton(self.top_frame, \
                   text='', variable=self.cb_var1)
        self.cb2 = tkinter.Checkbutton(self.top_frame, \
                   text='', variable=self.cb_var2)
        self.cb3 = tkinter.Checkbutton(self.top_frame, \
                   text='', variable=self.cb_var3)
        self.cb4 = tkinter.Checkbutton(self.top_frame, \
                   text='', variable=self.cb_var4)
        self.cb5 = tkinter.Checkbutton(self.top_frame, \
                   text='', variable=self.cb_var5)
        self.cb6 = tkinter.Checkbutton(self.top_frame, \
                   text='', variable=self.cb_var6)
        self.cb7 = tkinter.Checkbutton(self.top_frame, \
                   text='', variable=self.cb_var7)
        

        # Pack the Checkbuttons.
        self.cb1.pack()
        self.cb2.pack()
        self.cb3.pack()
        self.cb4.pack()
        self.cb5.pack()
        self.cb6.pack()
        self.cb7.pack()

        # Create an OK button and a Quit button.
        self.ok_button = tkinter.Button(self.bottom_frame, \
                    text='OK', command=self.show_choice)
        self.quit_button = tkinter.Button(self.bottom_frame, \
                    text='Quit', command=self.main_window.destroy)

        # Pack the Buttons.
        self.ok_button.pack(side='left')
        self.quit_button.pack(side='left')

        # Pack the frames.
        self.top_frame.pack()
        self.bottom_frame.pack()

        # Start the mainloop.
        tkinter.mainloop()

    # The show_choice method is the callback function for the OK button.

    def show_choice(self):
       # Create a message string.
        self.message = 'You selected:\n'
        total_cost = 0

        # Determine which Checkbuttons are selected and
        # build the message string accordingly.
        if self.cb_var1.get() == 1:
          self.message = self.message + 'My Shopping List'
        if self.cb_var2.get() == 1:
          self.message = self.message + 'Add Item'
        if self.cb_var3.get() == 1:
          self.message = self.message + ''
        if self.cb_var4.get() == 1:
          self.message = self.message + ''
        if self.cb_var5.get() == 1:
          self.message = self.message + ''
        if self.cb_var6.get() == 1:
          self.message = self.message + ''
        if self.cb_var7.get() == 1:
          self.message = self.message + ''

        if self.cb_var1.get() == 1:
            total_cost = (total_cost + 30)
        if self.cb_var2.get() == 1:
            total_cost = (total_cost + 20)
        if self.cb_var3.get() == 1:
            total_cost = (total_cost + 40)
        if self.cb_var4.get() == 1:
            total_cost = (total_cost + 100)
        if self.cb_var5.get() == 1:
            total_cost = (total_cost + 35)
        if self.cb_var6.get() == 1:
            total_cost = (total_cost + 200)
        if self.cb_var7.get() == 1:
            total_cost = (total_cost + 20)

        # Display the message in an info dialog box.
        tkinter.messagebox.showinfo('Selection', self.message)
        tkinter.messagebox.showinfo('Service Total',('Total cost: $%s' % total_cost))

# Create an instance of the ShoppingList class.
my_gui = ShoppingList()

